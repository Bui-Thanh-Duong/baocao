<div class="content">
    <% if (data.error) { %>
        <div class="alert alert-info">
            <%= data.error %> <!-- Hiển thị thông báo lỗi hoặc thành công -->
        </div>
    <% } %>
    <div class="row justify-content-center">
        <div class="col-md-9">
            <h2 class="mb-4 text-center">Cập nhật sản phẩm</h2>
            <form method="POST" action="/editproduct" enctype="multipart/form-data">
                <input type="hidden" name="masp" value="<%= data.product.masp %>">
                <!-- Các trường nhập liệu -->
                <div class="mb-3">
                    <label for="productName" class="form-label">Tên sản phẩm</label>
                    <input type="text" class="form-control" id="productName" name="productName" value="<%= data.product.ten %>"
                        placeholder="Nhập tên sản phẩm" required>
                </div>

                <div class="mb-3">
                    <label for="productPrice" class="form-label">Giá sản phẩm</label>
                    <input type="text" class="form-control" id="productPrice" name="productPrice" value="<%= data.product.gia %>"
                        placeholder="Nhập giá sản phẩm" required>
                </div>

                <div class="mb-3">
                    <img src="/images/product/<%= data.product.hinhanh %>" alt="Product Image" style="max-width: 100px; height: auto;">
                    <input type="hidden" name="oldImage" value="<%= data.product.hinhanh %>">
                    <label for="productImage" class="form-label">Hình ảnh sản phẩm</label>
                    <input type="file" class="form-control" id="productImage" name="productImage">
                </div>

                <div class="mb-3">
                    <label for="productDescription" class="form-label">Mô tả sản phẩm</label>
                    <textarea class="form-control" id="productDescription" name="productDescription" rows="3"
                        placeholder="Nhập mô tả sản phẩm" required><%= data.product.mota %></textarea>
                </div>

                <div class="mb-3">
                    <label for="productGroup" class="form-label">Nhóm</label>
                    <select class="form-control" id="productGroup" name="productGroup" required>
                        <option value="" disabled selected>Chọn nhóm sản phẩm</option>
                        <% if (data.category && data.category.length > 0) { %>
                            <% data.category.forEach(group => { %>
                                <option value="<%= group.idnhom %>" <%= group.idnhom === data.product.idnhom ? 'selected' : '' %>>
                                    <%= group.ten %>
                                </option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Cập nhật sản phẩm</button>
            </form>
        </div>
    </div>
</div>
